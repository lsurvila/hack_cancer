<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main"
    tools:context=".MainActivityFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_width="50dp"
        android:layout_height="75dp" />

    <TextView
        android:id="@+id/welcomeMessage"
        android:text="@string/app_name"
        android:paddingTop="10dp"
        android:layout_below="@id/logo"
        style="@style/LogoHeading"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hiThere"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        style="@style/WelcomeHeading"
        android:text="@string/IAmA"
        android:layout_below="@id/welcomeMessage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/fighter"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/Fighter"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        style="@style/WelcomeButton"
        android:layout_below="@id/hiThere"
        android:onClick="goToFighterLogin"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/supporter"
        style="@style/WelcomeButton"
        android:text="@string/Supporter"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fighter"
        android:onClick="goToSupporterLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
