<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_content"
    android:paddingLeft="4dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <co.hackcancer.hackcancer.layouts.RoundedImageView
        android:id="@+id/cheer_profile_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/profilepic_adriana" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cheer_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/roses"/>

        <TextView
            android:id="@+id/cheer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Your favourite roses!"
            android:paddingTop="4dp"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>



</LinearLayout>